<div data-alerts-target="alerts" id="{{ id }}">
    <div class="flex flex-col w-full max-w-sm p-4 pb-2 mb-2 {{ bgColor }} rounded-lg shadow-sm" role="alert">
        <div class="flex items-center w-full mb-4">
            <div class="flex items-center justify-center shrink-0 w-8 h-8 {{ textColor }} {{ bgColor }} rounded-lg">
                {{ ux_icon('flowbite:' ~ iconName, {'class': 'w-6 h-6'}) }}
                <span class="sr-only">{{ type }} {{ 'flash_massage.screen_reader.icon'| trans }}</span>
            </div>
            <div class="ms-3 text-sm font-normal">{{ message }}</div>
            <button type="button"
                    class="ms-auto -mx-1.5 -my-1.5 {{ textColor }} hover:text-gray-900 rounded-lg focus:ring-2
                       focus:ring-gray-300 p-1.5 inline-flex items-center justify-center h-8 w-8
                       dark:hover:text-white"
                    data-dismiss-target="{{ closeTarget }}" aria-label="Close">
                <span class="sr-only">{{ 'flash_massage.screen_reader.close_flash_message' | trans }}</span>
                <svg class="w-3 h-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14" aria-hidden="true">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M1 1l6 6m0 0l6 6M7 7l6-6M7 7l-6 6"></path>
                </svg>
            </button>
        </div>
        <div class="w-full rounded-full h-1.5">
            <progress
                    class="h-[2px] align-top w-full scale-x-[1] rounded-full {{ type }}"
                    value="100" max="100"></progress>
        </div>
    </div>
</div>